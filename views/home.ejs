<%- include("header") %>

<h1>Home</h1>
<p><%= homeStartingContent %></p>



<% postItem.forEach(function(post){ %>
        <h2> <%= post.title %> </h2> 
        <p>
        <%  if (post.message.length>100){ %>
                <%= post.message.slice(0,100) %> ... <a href="posts/<%= post.title %>"> read more </a>
        <%     }else{ %>
                <%= post.message %>
        <%     } %>
        </p>
<% })%>

<%- include("footer") %>
